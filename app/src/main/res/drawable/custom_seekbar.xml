<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Màu nền track -->
            <size android:height="1dp" /> <!-- Chiều cao track -->
        </shape>
    </item>

    <!-- Progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#ED2027" /> <!-- Màu progress -->
                <size android:height="1dp" /> <!-- Chiều cao progress -->
            </shape>
        </clip>
    </item>
</layer-list>